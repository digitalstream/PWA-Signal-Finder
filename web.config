<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>

        <!-- =================================================================== -->
        <!-- URL REWRITE RULES                                                     -->
        <!-- Requires the IIS URL Rewrite Module.                                -->
        <!-- =================================================================== -->
        <rewrite>
            <rules>
                <!-- RULE 1: Force HTTPS -->
                <!-- Redirects all non-secure HTTP traffic to the secure HTTPS version. -->
                <!-- This is critical for security, PWA functionality, and SEO. -->
                <rule name="Force HTTPS" enabled="true" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="^OFF$" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" redirectType="Permanent" />
                </rule>

                <!-- RULE 2: PWA Fallback Rule for Client-Side Routing -->
                <!-- If a user requests a deep link (e.g., /map) and the server can't find -->
                <!-- a physical file for it, this rule sends them to your main index.html file. -->
                <!-- Your PWA's JavaScript router can then handle the request. Essential for SPAs. -->
                <rule name="PWA Fallback Rule" enabled="true" stopProcessing="true">
                    <match url=".*" />
                    <conditions logicalGrouping="MatchAll" trackAllCaptures="false">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="/index.html" />
                </rule>
            </rules>
        </rewrite>

        <!-- =================================================================== -->
        <!-- MIME TYPES FOR PWA                                                    -->
        <!-- Ensures that essential PWA files like the manifest are served with  -->
        <!-- the correct content type header.                                    -->
        <!-- =================================================================== -->
        <staticContent>
            <remove fileExtension=".json" />
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <remove fileExtension=".webmanifest" />
            <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
        </staticContent>

    </system.webServer>
</configuration>